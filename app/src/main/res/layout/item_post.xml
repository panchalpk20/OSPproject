<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    app:cardCornerRadius="6dp"
    app:contentPadding="5dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/alluse"
    >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/userName"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:textSize="18dp"
    android:text="User Name"

    />
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/post_tv_options"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:textAppearance="?android:textAppearanceLarge"
            app:drawableEndCompat="@drawable/ic_flag" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/post_distance"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text=" "
            android:gravity="start"
            android:lines="2"

            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meter_from_you"
                android:gravity="start"
                android:lines="2"
                />
        <TextView
            android:id="@+id/post_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="date: "
            android:gravity="end|center_vertical"
            android:layout_weight="1"
            />


        </LinearLayout>

        <ProgressBar
            android:id="@+id/post_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="#E64A19"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp"
            android:background="@drawable/cardviewround"
            android:foreground="?android:attr/selectableItemBackground"
            >
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/post_image_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                />

        </HorizontalScrollView>
        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/post_tv_item_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Name"
            android:background="@drawable/text_view_style"
            android:textSize="16dp"
            android:gravity="center|start"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/textColor"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:baselineAligned="false"
            >

            <TextView
                android:id="@+id/post_tv_item_count"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:text="Qty"
                android:background="@drawable/text_view_style"
                android:textSize="16dp"
                android:gravity="center|start"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:layout_weight="1"
                android:layout_marginEnd="3dp"
                android:textColor="@color/textColor"
                app:drawableEndCompat="@drawable/ic_kg" />



            <TextView
                android:id="@+id/post_tv_item_price"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:text="Cost"
                android:background="@drawable/text_view_style"
                android:textSize="16dp"
                android:gravity="center|start"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                android:textColor="@color/textColor"
                app:drawableEndCompat="@drawable/ic_rskg" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    >

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/call"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/radio_loc_regular"
        android:drawableTop="@drawable/callme"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="@string/call_me" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/post_btn_buy"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/radio_loc_regular"
        android:drawableTop="@drawable/ic_baseline_shopping_basket_24"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="@string/buyy" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/whatsapp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/radio_loc_regular"
        android:drawableTop="@drawable/messageme"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="@string/whatsapp_me"
        android:textSize="12dp" />
</RelativeLayout>


        </LinearLayout>

    </LinearLayout>





</androidx.cardview.widget.CardView>